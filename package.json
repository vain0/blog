{
  "name": "vain0x-github-io-blog",
  "version": "1.0.0",
  "scripts": {
    "clean": "git clean -f ./docs && git checkout HEAD -- ./docs",
    "build": "hexo generate",
    "serve": "npm run build && npm run serve-watch",
    "serve-watch": "run-p serve-watch:*",
    "serve-watch:hexo": "hexo serve --watch",
    "serve-watch:open-web": "xdg-open http://127.0.0.1:4000/blog/",
    "deploy": "npm run git-ensure-clean && git checkout master && git merge develop --no-edit && npm run build && git add ./docs && git commit -m Build && git push origin master && git checkout develop && npm run clean",
    "git-ensure-clean": "git diff-index --quiet HEAD --"
  },
  "author": "vain0x",
  "license": "SEE LICENSE IN LICENSE",
  "description": "Blog written by vain0x.",
  "keywords": [
    "blog"
  ],
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vain0x/blog.git"
  },
  "homepage": "https://vain0x.github.io/blog/",
  "bugs": {
    "url": "https://github.com/vain0x/blog/issues"
  },
  "private": true,
  "hexo": {
    "version": "3.8.0"
  },
  "devDependencies": {
    "@types/node": "^10.11.4",
    "hexo-cli": "^1.1.0",
    "npm-run-all": "^4.1.3",
    "opn": "^5.4.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.1"
  },
  "dependencies": {
    "hexo": "^3.7.1",
    "hexo-generator-archive": "^0.1.5",
    "hexo-generator-category": "^0.1.3",
    "hexo-generator-feed": "^1.2.2",
    "hexo-generator-index": "^0.2.1",
    "hexo-generator-tag": "^0.2.0",
    "hexo-renderer-ejs": "^0.3.1",
    "hexo-renderer-marked": "^0.3.2",
    "hexo-renderer-stylus": "^0.3.3",
    "hexo-server": "^0.3.3"
  }
}
